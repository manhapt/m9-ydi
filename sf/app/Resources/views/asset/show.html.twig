{% extends 'base.html.twig' %}

{% block body %}
    <h1>Asset</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asset.id }}</td>
            </tr>
            <tr>
                <th>Uuid</th>
                <td>{{ asset.uuid }}</td>
            </tr>
            <tr>
                <th>State</th>
                <td>{{ asset.state }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ asset.name }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ asset.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ asset.description }}</td>
            </tr>
            <tr>
                <th>Options</th>
                <td>{{ asset.options }}</td>
            </tr>
            <tr>
                <th>Formatoption</th>
                <td>{{ asset.formatOption }}</td>
            </tr>
            <tr>
                <th>Uri</th>
                <td>{{ asset.uri }}</td>
            </tr>
            <tr>
                <th>Storageaccountname</th>
                <td>{{ asset.storageAccountName }}</td>
            </tr>
            <tr>
                <th>Alternateid</th>
                <td>{{ asset.alternateId }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{% if asset.created %}{{ asset.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Modified</th>
                <td>{% if asset.modified %}{{ asset.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('asset_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('asset_edit', { 'id': asset.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
