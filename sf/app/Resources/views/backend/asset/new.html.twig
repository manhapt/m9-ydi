{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="flash-notice error messages">
            {{ message|trans }}
        </div>
    {% endfor %}
    <h1>{{ 'Asset creation'|trans }}</h1>
    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input class="button button-primary" type="submit" value="{{ 'Create'|trans }}" />
    {{ form_end(form) }}

    <ul>
        <li class="actions-toolbar">
            <a class="button button-primary" href="{{ path('admin_asset_index') }}">{{ 'Back to the list'|trans }}</a>
        </li>
    </ul>
{% endblock %}
