{% extends 'base.html.twig' %}

{% block body %}
    <h1>Asset edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <figure class="preview">
            {% if asset.image %}
                <img src="{{ asset('wp-content/uploads/courses/assets/' ~ asset.image.filename) }}" width="150"/>
            {% endif %}
            {% if asset.document %}
                <p>Document path: {{ asset('wp-content/uploads/courses/assets/' ~ asset.document.filename) }}</p>
            {% endif %}
        </figure>
        <input class="button button-primary" type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li class="actions-toolbar">
            {{ form_start(delete_form) }}
            <input class="button button-primary" type="submit" value="Delete">
            {{ form_end(delete_form) }}
            <a class="button button-primary" href="{{ path('admin_asset_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
