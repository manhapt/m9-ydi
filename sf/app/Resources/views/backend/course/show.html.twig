{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'Course'|trans }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>{{ 'Image'|trans }}</th>
                <td>{{ course.image }}</td>
            </tr>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ course.description |raw }}</td>
            </tr>
            <tr>
                <th>{{ 'Short Description'|trans }}</th>
                <td>{{ course.shortDescription }}</td>
            </tr>
            <tr>
                <th>{{ 'Created'|trans }}</th>
                <td>{% if course.created %}{{ course.created|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>{{ 'Modified'|trans }}</th>
                <td>{% if course.modified %}{{ course.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li class="actions-toolbar">
            <a class="button button-primary" href="{{ path('admin_course_index') }}">{{ 'Back to the list'|trans }}</a>
            <a class="button button-primary" href="{{ path('admin_course_edit', { 'id': course.id }) }}">{{ 'Edit'|trans }}</a>
            <a class="button button-primary" href="{{ path('admin_report_course', { 'id': course.id }) }}">{{ 'Report'|trans }}</a>
            {{ form_start(delete_form) }}
            <input class="button button-primary" type="submit" value="{{ 'Delete'|trans }}">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
