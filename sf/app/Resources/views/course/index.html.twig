{% extends 'base.html.twig' %}

{% block body %}
    <h1>Courses list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Sku</th>
                <th>Name</th>
                <th>Price</th>
                <th>Status</th>
                <th>Typeid</th>
                <th>Image</th>
                <th>Description</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td><a href="{{ path('course_show', { 'id': course.id }) }}">{{ course.id }}</a></td>
                <td>{{ course.sku }}</td>
                <td>{{ course.name }}</td>
                <td>{{ course.price }}</td>
                <td>{{ course.status }}</td>
                <td>{{ course.typeId }}</td>
                <td>{{ course.image }}</td>
                <td>{{ course.description }}</td>
                <td>{% if course.created %}{{ course.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if course.modified %}{{ course.modified|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('course_show', { 'id': course.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('course_edit', { 'id': course.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('course_new') }}">Create a new course</a>
        </li>
    </ul>
{% endblock %}
