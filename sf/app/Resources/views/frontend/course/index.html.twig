{#{% extends 'base.html.twig' %}#}
{{ wp_get_header() }}
<div id="courses-index" class="elearning-wrapper">
    {% block body %}
        <section id="courses-list" class="courses-list">
            <div class="container">
                <div class="row">
                    <div class="title">
                        <i class="fa fa-graduation-cap fa-2x fa-pull-left"></i>
                        <h1>Các khóa học</h1>
                        <p class="sub-title">Bồi dưỡng kiến thức và phương pháp giảng dạy chương trình Tin học ứng dung và Khoa học máy tính.</p>
                    </div>
                    <!-- course item -->
                    <div class="grid carousel">
                        <div class="slides">
                            {% for course in courses %}
                                <div class="item">
                                    <a class="base-image course-card"
                                       href="{{ path('course_show', { 'id': course.id }) }}">
                                        <img data-lazy="{{ asset('wp-content/uploads/courses/' ~ course.image) }}"
                                             alt="{{ course.name }}"/>
                                    </a>
                                    <div class="details">
                                        <figure>
                                            <img src="{{ asset('wp-content/uploads/courses/' ~ course.image) }}"
                                                 alt="{{ course.name }}"/>
                                        </figure>
                                        <div class="description">
                                            <h3>{{ course.name }}</h3>
                                            <p>{{ course.shortDescription }}</p>
                                        </div>
                                    </div>
                                    <div class="actions">
                                        <i class="fa fa-heart"></i><span class="count">{{ course.totalParticipant }} Học viên tham gia</span>
                                        <a href="{{ path('course_show', { 'id': course.id }) }}" class="primary more">Tìm hiểu khóa học</a>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <!-- end course item -->
                </div>
            </div>
        </section>
        <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script defer src="{{ absolute_url(asset('wp-includes/js/slick.min.js')) }}" type="text/javascript"></script>
        <script defer>
            jQuery(document).ready(function () {
                jQuery('#courses-list .slides').slick({
                    dots: false,
                    infinite: true,
                    slidesToShow: 3,
                    slidesToScroll: 1,
                    lazyLoad: 'ondemand',
                    // autoplay: true,
                    responsive: [
                        {
                            breakpoint: 1024,
                            settings: {
                                slidesToShow: 3,
                                slidesToScroll: 1,
                                dots: true
                            }
                        },
                        {
                            breakpoint: 767,
                            settings: {
                                slidesToShow: 2,
                                slidesToScroll: 1,
                                dots: true
                            }
                        },
                        {
                            breakpoint: 479,
                            settings: {
                                slidesToShow: 1,
                                slidesToScroll: 1,
                                dots: true
                            }
                        }
                    ]
                });
            });
        </script>
    {% endblock %}
</div>
{% block javascripts %}{% endblock %}
{{ wp_get_footer() }}
