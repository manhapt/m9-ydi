{% extends 'base.html.twig' %}

{% block body %}
    <section class="learn-course course-show">
        <div class="container">
            <div class="row">
                <section class="section-title section-setting">
                    <div class="title">
                        <i class="fa fa-book-open fa-2x fa-pull-left"></i>
                        <h1 title="{{ course.name }}">{{ course.name }}</h1>
                        {% if(course.shortDescription) %}
                            <p class="sub-title">{{ course.shortDescription }}</p>
                        {% endif %}
                    </div>
                </section>
                <!-- course item -->
                <div class="content">
                    <div class="author col-left">
                        <section class="section_author section-setting">
                            {% if course.image %}
                                <figure>
                                    <img title="{{ course.name }}" src="{{ asset('wp-content/uploads/courses/' ~ course.image) }}"
                                         alt="{{ course.name }}"/>
                                </figure>
                            {% endif %}
                            <a title="Khóa học của tôi" href="/e-learning/user/course">Khóa học của tôi</a>
                        </section>
                    </div>
                    <div class="details col-right">
                        <section class="section-setting section_description">
                            <p class="title">Mô tả</p>
                            <div class="content_description">
                                {{ course.description |raw }}
                            </div>
                        </section>
                        <section class="section_lecture section-setting">
                            <p class="title">Giáo trình</p>
                            <ul class="content_lecture">
                                {% set assetCounter = 0 %}
                                {% set optionCounter = 0 %}
                                {% for courseOption in courseOptions %}
                                    {% set optionCounter = optionCounter+1 %}
                                    <li class="item">
                                        <h4 title="{{ courseOption.title }}">{{ courseOption.title }}</h4>
                                        <ul>
                                            {% for asset in courseOption.assets %}
                                                {% set assetCounter = assetCounter+1 %}
                                                <li class="child">
                                                    <i class="fas fa-2x fa-play-circle fa-pull-left"></i>
                                                    <a title="{{ asset.title }}" href="{{ path('course_asset', { 'id': course.id, 'asset_id': asset.id }) }}">
                                                        {{ asset.title }}
                                                    </a>
                                                </li>
                                            {% endfor %}
                                        </ul>
                                    </li>

                                {% endfor %}
                            </ul>
                        </section>
                        <section class="section_actions section-setting actions-toolbar">
                            <a class="button button-primary" title="Quay lại" href="{{ path('course_index') }}">Quay lại</a>
                        </section>
                    </div>
                </div>
                <!-- end course item -->
            </div>
        </div>
    </section>
{% endblock %}
